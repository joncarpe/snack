<!-- views/devise/menu/_login_items.html.erb -->
<% if user_signed_in? %>
  <li>
  <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
  </li>
<% else %>
  <li>
  <%= link_to('Login', new_user_session_path)  %>  
  </li>
<% end %>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  <strong>Submitted by:</strong>
  <%= @question.user.first_name %>
</p>

<p>
  <strong>Worth:</strong>
  <%= @question.worth %>
</p>

<p>
  <% @question.spam %>
</p>



 <p>--------------</p>
 <p><h3>Responses</h3></p>
 <div id="responses">
         <%= render :partial => @question.responses %>
 </div>



<h4>Add a great response. If the questioner picks you, we'll send you a snack coupon from a sponsor!</h4>
<%= form_for([@question, @question.responses.build]) do |f| %>
  <p><%= f.label :content %><br>
  <%= f.text_area :content %></p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
