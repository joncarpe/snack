<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  <strong>Submitted by:</strong>
  <%= @question.user_id %>
</p>

<p>
  <strong>Worth:</strong>
  <%= @question.worth %>
</p>

<p>
  <% @question.spam %>
</p>



 <p>--------------</p>
 <p><h3>Responses</h3></p>
 <div id="responses">
         <%= render :partial => @question.responses %>
 </div>



<h4>Add a great response for a shot at a snack:</h4>
<%= form_for([@question, @question.responses.build]) do |f| %>
  <p>
    <%= f.label :user %><br>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
